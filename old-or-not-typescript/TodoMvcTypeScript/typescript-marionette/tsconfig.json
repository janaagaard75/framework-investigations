{
    "compilerOptions": {
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        //"outFile": "js/app.js", // Cannot use outFile when module is set to commonjs.
        "outDir": "js",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "js",
        "node_modules",
        "typings/main",
        "typings/main.d.ts"
    ]
}