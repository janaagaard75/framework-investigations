{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true, // TODO: Turn on.
    "noImplicitReturns": false,
    "removeComments": true,
    "outDir": "./dist/",
    "sourceMap": true,
    // "strictNullChecks": true, // TODO: Turn on.
    "target": "es2015",
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "typings",
    "webpack.config.js"
  ]
}
