{
    "compilerOptions": {
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "module": "amd",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outFile": "dist/bundle.js",
        "removeComments": true,
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "dist",
        "node_modules",
        "typings/globals"
    ]
}